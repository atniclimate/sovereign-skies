# SovereignSkies Environment Variables
# Copy this file to .env.local for local overrides

# ============================================================
# API Configuration (Optional - defaults work for development)
# ============================================================

# Override NWS API base URL for testing
# VITE_NWS_BASE_URL=https://api.weather.gov

# Override Environment Canada base URL
# VITE_EC_BASE_URL=https://dd.weather.gc.ca

# ============================================================
# Feature Flags (Optional)
# ============================================================

# Disable Canadian alerts for US-only deployment
# VITE_INCLUDE_CANADA=false

# Disable marine layer by default
# VITE_ENABLE_MARINE=false

# ============================================================
# Debug Settings (Development Only)
# ============================================================

# Enable verbose console logging
# VITE_DEBUG=true
